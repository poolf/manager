.proForm {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  &_wrapper {
    width: 50%;
    padding: 10px 40px;
    background: #fff;
    border-radius: 15px;
    box-sizing: border-box;
    h2 {
      text-align: center;
    }
  }
  &_preview {
    position: fixed;
    right: 0;
    top: 60px;
    bottom: 30px;
    width: 44%;
    background-color: #fff;
    border: 1px solid #ddd;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    flex-direction: column;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    > .hd {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      > .btn {
        box-sizing: border-box;
        padding: 4px 20px;
        font-weight: bold;
        font-size: 14px;
        text-align: center;
        cursor: pointer;
        &.act {
          width: 70%;
          background-color: #dbe8f0;
          border: 1px solid #c8d5db;
        }
        &.cls {
          width: 30%;
          background-color: #ea4a36;
          border: 1px solid #e8351f;
          color: #fff;
        }
      }
    }
    > .bd {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
      flex: 1;
      overflow: hidden;
      position: relative;
      overflow-y: auto;
    }
  }
}
.proTemplateList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
.proTemplateItem {
  margin: 0 10px 10px 0;
  width: 50px;
  text-align: center;
  line-height: normal;
  > img {
    border: 2px solid #ccc;
    -webkit-transition: 0.3s;
    transition: 0.3s;
  }
  > p {
    margin: 0;
  }
  &.sel > img {
    border-color: #b31800;
    border-radius: 50%;
  }
}
